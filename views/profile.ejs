<%- include('./partials/head') %>

<body id="yourProfile">

  <%- include('./partials/header') %>

  <main>
    <section>
      <div>
        <p> Welcome </p>
        <h2> <%= profileData.username %> </h2>
        <P> <%= profileData.age %> </P>
        <P> <%= profileData.about %></P>
      </div>

      <img width="100px" src="/static/img/profilepic/<%= profileData.file %>"  alt="Profile Picture"/>
    </section>
    
    <section>
      <ul>
        <% selectedGenre.forEach(selectedGenre => { %>
          <li>
            <img src="../static/img/genres/<%= selectedGenre.img %>" alt="<%= selectedGenre.name %>">
            <p><%= selectedGenre.name %></p>
          </li>
          <% }); %>
      </ul>
    </section>

    <section>
      <p> My artists</p>
      <section id="emptyState">
        <p>Complete your profile</p>
        <a href="/profile/add-artists">Add artists</a>
      </section>

      <section>
        <ul>
          <% favoriteArtists.forEach(favoriteArtist => { %>
          <li>
            <img src="<%= favoriteArtist.path %>" alt="<%= favoriteArtist.name %>">
            <%= favoriteArtists.name %>
          </li>
          <% }); %>
        </ul>
      </section>
      
    </section>
  </main>
</body>
</html>