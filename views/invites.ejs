<%- include('./partials/head') %>

<body>
    <%- include('./partials/header') %>
    <main>
        <section>
            <section>
                <h2>New</h2>
                <% if(newInvites.length ==0) { %>
                    <p>No new invites yet</p>
                <% } else { %>
                    <ul>
                        <% newInvites.forEach(invite => { %>
                            <li>Hi! I am <%= invite.from %> </li>
                            <li>Do you want to go to <%= invite.event %> with me?</li>
                            <li><img src="../static/img/profilepic/serenoiia.jpg" alt="profielfoto"></li>
                            <li>
                                <ul>
                                    <li><a href="">Event info</a></li>
                                    <li><a href="">Ignore</a></li>
                                    <li > <a href="" class="acceptationbutton">Accept</a></li>
                                </ul>
                            </li>
                        <% }) %>
                    </ul>
                <% } %>
            </section>

            <section>
                <h2>Waiting for acceptation</h2>
                <% if (waitingForAcceptationInvite.length == 0) { %>
                    <p>Invites that you send to others will appear here</p>
                    <a href="/upcoming-events">Find events</a>
                <% }  else { %>
                    <% waitingForAcceptationInvite.forEach(invite => { %>
                        <ul>
                            <li>You send an invite to <%= invite.to %> for <%= invite.event %> </li>
                            <li>Not yet accepted</li>
                            <li><img src="../static/img/profilepic/serenoiia.jpg" alt="profielfoto"></li>
                        </ul>
                        <% }) %>
                <% } %>
            </section>

            <section>
                <h2>Pending</h2>

                <% if (pendingInvite.length == 0) { %>
                    <p>Invites that you have not yet accepted, will appear here</p>
                <% }  else { %>
                    <% pendingInvite.forEach(invite => { %>
                        <ul>
                            <li>Hi! I am <%= invite.from %> </li>
                            <li>Do you want to go to <%= invite.event %> with me?</li>
                            <li><img src="../static/img/profilepic/8b9a94f7acedfadb9700cc067678b74f" alt="profielfoto"></li>
                            <li>
                                <ul>
                                    <li><a href="">Event info</a></li>
                                    <li><a href="">Ignore</a></li>
                                    <li ><a href="">Accept</a></li>
                                </ul>
                            </li>
                        </ul>
                        <% }) %>
                <% } %>
            </section>
        </section>
        
    </main>

    <%- include('./partials/footer') %>
    <script src="../js/invites.js"></script>

</body>
</html>