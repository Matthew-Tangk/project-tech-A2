<%- include('./partials/head') %>

<body>
  <main>
    <!-- Genres -->
    <section id="selectGenres">
      <span>4/4</span>
      <h1>Add your favorite genres</h1>
    
      <form action="/profile" method="post" >
        <fieldset>
          <legend>Fill in the about me below</legend>
            <ul>
              <% genres.forEach(genres => { %>
              <li>
                <input type="checkbox" id="<%= genres.name %>" name="favoritegenres" value="<%= genres.name %>" >
                <label for="<%= genres.name %>">
                  <img src="../static/img/genres/<%= genres.img %>" alt="<%= genres.name %>">
                   <%= genres.name %> </label>
              </li>
              <% }); %>
            </ul>

            <input type="hidden" name="username" value="<%= username %>" />
            <input type="hidden" name="age" value="<%= age %>" />
            <input type="hidden" name="tel" value="<%= tel %>" />
            <input type="hidden" name="email" value="<%= email %>" />
            <input type="hidden" name="file" value="<%= picture %>" />
            <input type="hidden" name="about" value="<% about %>">

            <input type="submit" value="Next" />
          </fieldset>
        </form>
    
    </section>
  </main>
</body>
</html>
